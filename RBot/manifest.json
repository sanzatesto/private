{
	"name": "RBot",
	"description": "RBot",
	"version": "1.0",
	"manifest_version": 3,
	"action": {
		"default_title": "RBot",
		"default_popup": "index.html",
		"default_icon": {
			"128": "images/icon128.png"
		}
	},
	"permissions": [
		"debugger",
		"scripting",
		"declarativeNetRequest",
		"storage"
	],
	"host_permissions": [
		"https://*.margonem.pl/",
                "https://torchello.smallhost.pl/"
	],
	"background": {
		"service_worker": "resources/background.js"
	},
	"content_scripts": [
		{
			"js": [
				"resources/connect.js"
			],
			"matches": [
				"https://*.margonem.pl/"
			],
			"exclude_matches": [
				"https://www.margonem.pl/",
				"https://forum.margonem.pl/",
				"https://commons.margonem.pl/"
			],
			"run_at": "document_start"
		}
	]
}
